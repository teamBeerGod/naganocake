<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-10 col-lg-8 px-5 px-sm-0 mx-auto d-flex justify-content-between m-5">
      <h3 class="d-flex align-items-center pr-3 pl-3">ジャンル一覧・追加</h3>
    </div>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto" >

      
      <table class="table">
        <thead class="table-active">
          <%= form_with model: [:admin,@genre] do |f| %>
            <div class="form-group mb-5">
              <div class="form-inline">
                <tr>
                  <th>ジャンル名</th>
                  <th><%= f.text_field :name %></th>
                  <th><%= f.submit '新規登録' %></th>
                </tr>
              </div>  
            </div>    
            <% end %>
        </thead>
        <tbody>
          　<tr>ジャンル</tr>
          <% @genres.each do |genre| %>
            <tr>
              <th class="text-center"><%= genre.name  %></th>
              <th><%= link_to "編集する", edit_admin_genre_path(genre.id) %></th>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>  
  </div>    
</div>      