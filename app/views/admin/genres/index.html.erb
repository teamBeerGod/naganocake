<h3 class="ml-5">ジャンル一覧・追加</h3>

<table class="table">
  <thead>
    <%= form_with model: [:admin,@genre] do |f| %>
      <tr>
        <th>ジャンル名</th>
        <th><%= f.text_field :name %></th>
        <th><%= f.submit '新規登録', class: "btn btn-success" %></th>
      </tr>
    <% end %>
  </thead>
  <tbody>
    <th>ジャンル</th>
    <% @genres.each do |genre| %>
      <tr>
        <th><%= genre.name  %></th>
        <th><%= link_to "編集する", edit_admin_genre_path(genre.id) %></th>
      </tr>
    <% end %>
  </tbody>
</table>