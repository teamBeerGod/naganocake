<h4>商品新規登録</h4>

<%= form_with model: [:admin,@product], method: :post do |f| %>
  <div>
    <%= f.label :image, '商品画像' %>
    <%= f.file_field :image, accept: "image/*" %>
  </div>
  <div>
    <%= f.label :name, '商品名' %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :introduction, '商品説明' %>
    <%= f.text_area :introduction %>
  </div>
  <div>
    <%= f.label :genre_id, 'ジャンル' %>
    <%= f.select :genre_id, Genre.all.map{|o| [o.name, o.id]}, { include_blank: "--選択してください--" } %>
  </div>
  <div>
    <%= f.label :price, '税抜価格' %>
    <%= f.text_field :price_without_tax %>
  </div>
  <div>
    
  </div>
<% end %>