<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-10 col-lg-8 px-5 px-sm-0 mx-auto d-flex justify-content-between m-5">
      <h4 class="d-flex align-items-center pr-3 pl-3">商品編集</h4>
    </div>  
      <div class="mx-auto tr-color p-3">
        <%= form_with model: [:admin,@product], method: :patch do |f| %>
          <div>
            <%= f.label :image, '商品画像' %>
            <%= f.file_field :image, accept: "image/*" %>
          </div>
          <div>
            <%= f.label :name, '商品名' %>
            <%= f.text_field :name %>
          </div>
          <div>
            <%= f.label :introduction, '商品説明' %>
            <%= f.text_area :introduction %>
          </div>
          <div>
            <%= f.label :genre_id, 'ジャンル' %>
            <%= f.select :genre_id, Genre.all.map{|o| [o.name, o.id]}, { include_blank: "--選択してください--" } %>
          </div>
          <div>
            <%= f.label :price, '税抜価格' %>
            <%= f.text_field :price_without_tax %>
          </div>
          <div>
            <%= f.label :is_active, '販売ステータス' %>
            <%= f.label :is_active_sale, '販売中' %>
            <%= f.radio_button :is_active, :sale %>
            <%= f.label :is_active_discontinued, '販売停止中' %>
            <%= f.radio_button :is_active, :discontinued %>
          </div>
          <div>
            <%= f.submit "変更を保存" %>
          </div>
        <% end %>
      </div>
  </div> 
</div>  
