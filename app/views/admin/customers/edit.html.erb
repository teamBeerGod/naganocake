<div class='container'>
<div class='row pt-5'>
<div class="col-sm-12 col-md-11 col-lg-10 px-5 px-sm-0 mx-auto">
  <div class='row py-4'>
    <h3 class="ml-5"><%= @customer.full_name %>さんの会員詳細</h3>
  </div>
  <div class="tr-color p-2">
     <%= form_with model: [:admin,@customer] do |f| %>
     <div class="form-group">
       <table class="table table-borderless">
       <tbody>
            <tr>
              <th>会員ID</th>
              <th><%= @customer.id %></th>
            </tr>
            <tr>
              <th>氏名</th>
              <th><%= f.text_field :last_name, autofocus: true, id:"inputname" %></th>
              <th><%= f.text_field :first_name, autofocus: true, id:"inputname" %></th>
            </tr>
            <tr>
              <th>フリガナ</th>
              <th><%= f.text_field :last_name_kana, autofocus: true, id:"inputname" %></th>
              <th><%= f.text_field :first_name_kana, autofocus: true, id:"inputname" %></th>
            </tr>
            <tr>
              <th>郵便番号</th>
              <th><%= f.text_field :post_code, autofocus: true, id:"inputname" %></th>
            </tr>
            <tr>
              <th>住所</th>
              <th><%= f.text_field :address, autofocus: true, id:"inputname" %></th>
            </tr>
            <tr>
              <th>電話番号</th>
              <th><%= f.text_field :phone_number, autofocus: true, id:"inputname" %></th>
            </tr>
            <tr>
              <th>メールアドレス</th>
              <th><%= f.text_field :email, autofocus: true, id:"inputname" %></th>
            </tr>
            <tr>
              <th><%= f.label :is_deleted,"会員ステータス" %></th>
              <th>
                <%= f.radio_button :is_deleted, :false, checked: true %>
                <%= f.label :is_deleted, "有効", value: false %>
                <%= f.radio_button :is_deleted, :true %>
                <%= f.label :is_deleted, "退会", value: true %>
              </th>
            </tr>
            <tr>
              <th> <%= f.submit "変更を保存" %></th>
            </tr>
       </tbody>
       </table>
     </div>
     <% end %>
  </div>

</div>
</div>
</div>