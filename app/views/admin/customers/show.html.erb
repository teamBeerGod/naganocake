<div class='container'>
<div class='row pt-5'>
<div class="col-sm-12 col-md-10 col-lg-8 px-5 px-sm-0 mx-auto">
  <div class='row py-4'>
    <h3><%= @customer.full_name %>さんの会員詳細</h3>
  </div>
      <table class="table table-bordered ml-5">
         <thead>

            <tr>
              <th class="table-active w-25">会員ID</th>
              <th class="tr-color"> <%= @customer.id %></th>
            </tr>
            <tr>
              <th class="table-active">氏名</th>
              <th class="tr-color"><%= @customer.full_name %></th>
            </tr>
            <tr>
              <th class="table-active">フリガナ</th>
              <th class="tr-color"><%= @customer.last_name_kana %><%= @customer.first_name_kana %></th>
            </tr>
            <tr>
              <th class="table-active">郵便番号</th>
              <th class="tr-color"><%= @customer.post_code %></th>
            </tr>
            <tr>
              <th class="table-active">住所</th>
              <th class="tr-color"><%= @customer.address %></th>
            </tr>
            <tr>
              <th class="table-active">電話番号</th>
              <th class="tr-color"><%= @customer.phone_number %></th>
            </tr>
            <tr>
              <th class="table-active">メールアドレス</th>
              <th class="tr-color"><%= @customer.email %> </th>
            </tr>
            <tr>
              <th class="table-active">会員ステータス</th>
              <th>
                 <% if @customer.is_deleted == false %>
                   <div>有効</div>
                 <% else %>
                   <div>退会</div>
                 <% end %>
              </th>
            </tr>
         </thead>
       </table>
       <table class="table table-borderless text-center">
           <tr>
            <th><%= link_to "編集する", edit_admin_customer_path(@customer.id)%>  </th>
            <th><%= link_to "注文履歴一覧" %></th>
           </tr>
       </table>

