<h3 class="ml-5">会員詳細</h3>
  <table>
     <thead>

        <tr>
          <th>会員ID</th>
          <th><%= @customer.id %></th>
        </tr>
        <tr>
          <th>氏名</th>
          <th><%= @customer.full_name %></th>
        </tr>
        <tr>
          <th>フリガナ</th>
          <th><%= @customer.last_name_kana %><%= @customer.first_name_kana %></th>
        </tr>
        <tr>
          <th>郵便番号</th>
          <th><%= @customer.post_code %></th>
        </tr>
        <tr>
          <th>住所</th>
          <th><%= @customer.address %></th>
        </tr>
        <tr>
          <th>電話番号</th>
          <th><%= @customer.phone_number %></th>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <th><%= @customer.email %> </th>
        </tr>
        <tr>
          <th>会員ステータス</th>
          <th><%= @customer.is_deleted %></th>
        </tr>

     </thead>
     <tbody>
       <tr>
        <th><%= link_to "編集する", edit_admin_customer_path(@customer.id)%>  </th>
        <th><%= link_to "注文履歴一覧", admin_orders_path(customer_id: @customer.id) %></th>
       </tr>
     </tbody>
  </table>

