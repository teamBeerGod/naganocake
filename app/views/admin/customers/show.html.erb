<h3 class="ml-5">会員詳細</h3>
  <table  class="table">
     <thead>
       <% @user.each do |user| %>
        <tr>
          <th>会員ID</th>
          <th><%= user.id %></th>
        </tr>
        <tr>
          <th>氏名</th>
          <th><%= user.full_name %></th>
        </tr>
        <tr>
          <th>フリガナ</th>
          <th><%= user.last_name_kana %><%= user.first_name_kana %></th>
        </tr>
        <tr>
          <th>郵便番号</th>
          <th><%= user.post_code %></th>
        </tr>
        <tr>
          <th>住所</th>
          <th><%= user.address %></th>
        </tr>
        <tr>
          <th>電話番号</th>
          <th><%= user.phone_number %></th>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <th><%= user.email %> </th>
        </tr>
        <tr>
          <th>会員ステータス</th>
          <th><%= user.is_deleted %></th>
        </tr>
      <% end %>
     </thead>
     <tbody>
       <tr>
        <th><%= link_to "編集する", edit_admin_customer_path(customer.id)%>  </th>
        <th><%= link_to "注文履歴一覧", order_path(customer.id) %></th>
       </tr>
     </tbody>
  </table>

