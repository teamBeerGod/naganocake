<div class="text-center mb-5"></div>
  <div class = "container" >
    <div class = "row" >
      <div class = "col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
       <h3 class="font-weight-bold col-3 ml-4 mb-4 text-nowrap"><%=  @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h3>
       </div>
          <div class="d-flex flex-row">
                  <div class="mr-2" ><strong>登録情報</strong></div>
                  <div class="ml-3"><%= link_to "編集する", edit_customer_path(current_customer) , class: "btn btn-sm btn-info" %></div>
                </div>

                <table class="table">

                    <tr>
                      <th >氏名</th>
                      <td><%= @customer.last_name + "　" + @customer.first_name %></td>
                    </tr>
                    <tr>
                      <th >カナ</th>
                      <td><%= @customer.last_name_kana + "　" + @customer.first_name_kana %></td>
                    </tr>
                    <tr>
                      <th >郵便番号</th>
                      <td><%= @customer.post_code %></td>
                    </tr>
                    <tr>
                      <th >住所</th>
                      <td><%= @customer.address %></td>
                    </tr>
                    <tr>
                      <th >電話番号</th>
                      <td><%= @customer.phone_number %></td>
                    </tr>
                    <tr>
                      <th >メールアドレス</th>
                      <td><%= @customer.email %></td>
                    </tr>

                </table>

                <table>
                      <tr  >
                        <th style="width: 30%">配送先</th>
                        <td style="width: 50%"><%= link_to "一覧を見る", shipping_addresses_path, class: "btn btn-sm btn-secondary" %></td>
                      </tr>
                      <tr>
                        <th style="width: 30%">注文履歴</th>
                        <td style="width: 50%"><%= link_to "一覧を見る", orders_path, class: "btn btn-sm btn-secondary" %></td>
                      </tr>
                    </table>
