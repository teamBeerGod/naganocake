<h3>注文履歴詳細</h3>

<div class='col-md-6'>
  <table class="table">
    <tr>
      <td>商品名</td>
      <td>単価(税込)</td>
      <td>数量</td>
      <td>小計</td>
    </tr>
    <% total_cost = 0 %>
    <% @cart_items.each do |item| %>
      <tr>
        <td><%= item.product.name %></td>
        <td><%= item.add_tax %> 円</td>
        <td><%= item.quantity %></td>
        <td><%= item.calc_subtotal %> 円</td>
      </tr>
      <% total_cost += (item.calc_subtotal*item.quantity) %>
    <% end %>
  </table>
</div>

<div class='col-md-3'>
  <table class="table">
    <tr>
      <td>送料</td>
      <td><%= @order.shipping_cost %> 円</td>
    </tr>
    <tr>
      <td>商品合計</td>
      <td><%= total_cost %> 円</td>
    </tr>
    <tr>
      <td>ご請求額</td>
      <td><%= total_cost + @order.shipping_cost %> 円</td>
    </tr>
  </table>
</div>

<h5>注文情報</h5>
<table class="table">
  <tr>
    <td>注文日</td>
    <td>date</td>
  </tr>
  <tr>
    <td>配送先</td>
    <td>address</td>
  </tr>
  <tr>
    <td>支払い方法</td>
    <td>method</td>
  </tr>
</table>