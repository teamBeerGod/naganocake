<h3>注文履歴詳細</h3>

<div class='col-md-6'>
  <table class="table">
    <tr>
      <td>商品名</td>
      <td>単価(税込)</td>
      <td>数量</td>
      <td>小計</td>
    </tr>
    <% total_cost = 0 %>
    <% @order_details.each do |order_detail| %>
      <tr>
        <td><%= order_detail.product.name %></td>
        <td><%= order_detail.price_including_tax %> 円</td>
        <td><%= order_detail.quantity %></td>
        <td><%= order_detail.calc_subtotal %> 円</td>
      </tr>
      <% total_cost += order_detail.calc_subtotal %>
    <% end %>
  </table>
</div>

<div class='col-md-3'>
  <table class="table">
    <tr>
      <td>送料</td>
      <td><%= @order.shipping_cost %> 円</td>
    </tr>
    <tr>
      <td>商品合計</td>
      <td><%= total_cost %> 円</td>
    </tr>
    <tr>
      <td>ご請求額</td>
      <td><%= total_cost + @order.shipping_cost %> 円</td>
    </tr>
  </table>
</div>

<h5>注文情報</h5>
<table class="table">
  <tr>
    <td>注文日</td>
    <td><%= @order.created_at %></td>
  </tr>
  <tr>
    <td>配送先</td>
    <td><%= @order.address_display %></td>
  </tr>
  <tr>
    <td>支払い方法</td>
    <td><%= Order.payment_methods_i18n[@order.payment_method] %></td>
  </tr>
</table>