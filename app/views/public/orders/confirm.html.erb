<h3>注文情報確認</h3>

%= form_with model: @order, url: "/orders" do %>

  <table class="table">
    <tr>
      <td>商品名</td>
      <td>単価(税込)</td>
      <td>数量</td>
      <td>小計</td>
    </tr>
    <% @cart_items.each do |item| %>
      <tr>
        <td><%= item.product.name %></td>
        <td><%= item.add_tax %> 円</td>
        <td><%= item.quantity %></td>
        <td><%= item.calc_subtotal %> 円</td>
      </tr>
    <% end %>
  </table>

  <table class="table">
    <tr>
      <td>送料</td>
      <td><%= @order.shipping_cost %> 円</td>
    </tr>
    <tr>
      <td>商品合計</td>
      <td><%= @order.shipping_cost %> 円</td>
    </tr>
    <tr>
      <td>ご請求額</td>
      <td><%= @order.billing_amount %> 円</td>
    </tr>
  </table>

  <table class="table">
    <tr>
      <td>支払い方法</td>
      <td><%= Order.payment_methods_i18n[@order.payment_method] %></td>
    </tr>
    <tr>
      <td>お届け先</td>
      <td>
        〒<%= @order.post_code %> <%= @order.address %><br>
        <%= @order.name %>
      </td>
    </tr>
  </table>
  <!--%= f.submit "注文を確定する" %>-->
% end %>

