<h3>注文情報入力</h3>

<h3>支払い方法</h3>
<div class="selection_payment_method">
  <%= form_with do |f| %>
    <div class="selection_box">
      <%= f.radio_button :payment_method, :credit %>
      <%= f.label :payment_method, "クレジットカード", {value: :credit, style: "display: inline-block;"} %>
    </div>
    <div class="selection_box">
      <%= f.radio_button :payment_method, :transfer %>
      <%= f.label :payment_method, "銀行振込", {value: :transfer, style: "display: inline-block;"} %>
    </div>
  <% end %>
</div>

<h3>お届け先</h3>
<div class="selection_destination">
  <%= form_with do |f| %>
    <div class="selection_box">
      <%= f.radio_button :payment_method, :credit %>
      <%= f.label :payment_method, "ご自身の住所", {value: :credit, style: "display: inline-block;"} %>
      住所（current_user）
    </div>
    <div class="selection_box">
      <%= f.radio_button :payment_method, :transfer %>
      <%= f.label :payment_method, "登録済住所から選択", {value: :transfer, style: "display: inline-block;"} %>
    </div>
    <div class="selection_box">
      <%= f.radio_button :payment_method, :transfer %>
      <%= f.label :payment_method, "新しいお届け先", {value: :transfer, style: "display: inline-block;"} %>
    </div>
<% end %>
  <div class="new_shipping_address">
    <%= form_with do |f| %>
      <table>
        <tr>
          <th><%= f.label :郵便番号 %>(ハイフンなし)</th>
          <th><%= f.text_field "郵便番号(ハイフンなし)", class: "form-controll", size: 15 %></th>
        </tr>
        <tr>
          <th><%= f.label :住所 %></th>
          <th><%= f.text_field "住所", class: "form-controll", size: 40 %></th>
        </tr>
        <tr>
          <th><%= f.label :宛名 %></th>
          <th><%= f.text_field "宛名", class: "form-controll", size: 15  %></th>
        </tr>
      </table>
    <% end %>
  </div>
</div>


