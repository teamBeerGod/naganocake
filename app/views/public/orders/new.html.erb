<h3>注文情報入力</h3>

<%= form_with model: @order, url: "/orders/confirm", method: :post do |f| %>
  <h3>支払い方法</h3>
  <div class="selection_payment_method">
    <div class="selection_box">
      <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
      <%= f.label :payment_method_credit_card, Order.payment_methods_i18n[:credit_card] %>
    </div>
    <div class="selection_box">
      <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
      <%= f.label :payment_method_transfer, Order.payment_methods_i18n[:transfer] %>
    </div>
  </div>

  <h3>お届け先</h3>
  <div class="selection_destination">
    <div class="selection_box">
      <%= f.radio_button :selection_address, 0, checked: "checked" %>
      <%= f.label :selection_address_0, "ご自身の住所" %>
      <!--ログイン機能実装後に追加 　住所（current_user）-->
    </div>
    <div class="selection_box">
      <%= f.radio_button :selection_address, 1 %>
      <%= f.label :selection_address_1, "登録済住所から選択" %>
      <%= f.select :shipping_address_id, options_from_collection_for_select(ShippingAddress.all, :id, :address_display) %>
    </div>
    <div class="selection_box">
      <%= f.radio_button :selection_address, 2 %>
      <%= f.label :selection_address_2, "新しいお届け先" %>
    </div>

    <div class="new_shipping_address">
      <table>
        <tr>
          <th>郵便番号(ハイフンなし)</th>
          <th><%= f.text_field :post_code, class: "form-controll", size: 15 %></th>
        </tr>
        <tr>
          <th>住所</th>
          <th><%= f.text_field :address, class: "form-controll", size: 40 %></th>
        </tr>
        <tr>
          <th><%= f.label :宛名 %></th>
          <th><%= f.text_field :delivery_name, class: "form-controll", size: 15  %></th>
        </tr>
      </table>
    </div>
  </div>
  <%= f.submit "確認画面へ進む" %>
<% end %>
