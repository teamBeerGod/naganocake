<h3>ショッピングカート</h3>
<div>
  <%= link_to "カートを空にする", destroy_all_path , method: :delete %>
  <table class ="table">
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
    <% total = 0 %>
    <% @cart_items.each do |cart_item| %>
      <tr>
        <th><%= cart_item.product.name %></th>
        <th><%= cart_item.add_tax %></th>
        <th>
          <div class="input-group">
            <%= form_with model: cart_item, url: cart_item_path(cart_item), method: :patch do |f| %>
              <%= f.hidden_field :customer_id, :value => current_customer.id %>
              <%= f.select :quantity, *[1..99] %>
              <%= f.submit "変更" %>
            <% end %>
          </div>
        </th>
        <th><%= cart_item.calc_subtotal %></th>
        <th>
          <%= link_to cart_item_path(cart_item.id), method: :delete do %>
            <i class="fas fa-trash"></i>
          <% end %>
        </th>
      </tr>
      <% total += cart_item.calc_subtotal %>
    <% end %>

    <table class= "table">
      <tr>
        <th>合計金額</th>
        <td><%= total %> 円</td>
      </tr>
    </table>

    <%= link_to "買い物を続ける", products_path %>
    <%= link_to "レジに進む", new_order_path %>
  </table>
</div>