

    <h3 class="">新規会員登録</h3>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>
    <table class="table table-borderless contents-area">
      <tr>
        <th style="">名前</th>
        <td class="text-right"  style="width: 10%"><%= f.label :（姓） %></td>
        <td><%= f.text_field :last_name, autofocus: true %></td>
        <td class="text-right"><%= f.label :（名） %></td>
        <td><%= f.text_field :first_name, autofocus: true %></td>
      </tr>
      <tr>
        <th style="">フリガナ</th>
        <td class="text-right"><%= f.label :（セイ） %>
        <td><%= f.text_field :last_name_kana, autofocus: true %></td>
        <td class="text-right"><%= f.label :（メイ） %></td>
        <td><%= f.text_field :first_name_kana, autofocus: true %></td>
      </tr>
      <tr>
        <th style=""><%= f.label :メールアドレス %></th>
        <td></td>
        <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
        <td></td>
        <td></td>
      </tr>
      <tr>
        <th style="width: 20%"><%= f.label :郵便番号 %></th>
        <td></td>
        <td><%= f.number_field :post_code, autofocus: true %></td>
        <td></td>
        <td></td>
      </tr>
      <tr>
        <th style=""><%= f.label :住所 %></th>
        <td></td>
        <td><%= f.text_field :address, autofocus: true, style: "width:100%" %></td>
        <td></td>
        <td></td>
      </tr>
      <tr>
        <th style=""><%= f.label :電話番号 %></th>
        <td></td>
        <td><%= f.number_field :phone_number, autofocus: true %></td>
        <td></td>
        <td></td>
      </tr>
      <tr>
        <th style="">
          <%= f.label :パスワード %>
          <% if @minimum_password_length %>
          (<%= @minimum_password_length %>文字以上)
          <% end %>
        </th>
        <td></td>
        <td><%= f.password_field :password, autocomplete: "new-password" %></td>
        <td></td>
        <td></td>
      </tr>
      <tr>
        <th style="width: 20%"><%= f.label :確認用パスワード %></th>
        <td></td>
        <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
      </tr>
    </table>

      <%= f.submit "新規登録", class: "btn btn-success w-25" %>
    </div>
  <% end %>

  <div class="">
    <strong>既に登録済みの方</strong></br>
    <%= link_to "こちら", new_customer_session_path %> からログインしてください。
  </div>
</div>