<div class="container">

  <div class="row">
    <h3 class="col-lg-3 col-md-4 col-sm-4 bg-light text-center">配送先編集</h3>
  </div>

  <div class="row">
    <div class="col-lg-12">

      <%= form_with model: @shipping_address do |f| %>
        <div class="form-group row">
          <label for="post_code" class="col-sm-3 col-form-label">郵便番号（ハイフンなし）</label>
          <div class="col-sm-3">
            <%= f.text_field :post_code, class: "form-control border-dark" %>
          </div>
        </div>

        <div class="form-group row">
          <label for="address" class="col-sm-3 col-form-label">住所</label>
          <div class="col-sm-6">
            <%= f.text_field :address, class: "form-control border-dark" %>
          </div>
        </div>

        <div class="form-group row">
          <label for="name" class="col-sm-3 col-form-label">宛名</label>
          <div class="col-sm-3">
            <%= f.text_field :delivery_name, class: "form-control border-dark" %>
          </div>
        </div>

        <div class="form-group row">
          <div class=" col-9 form-group text-right">
            <%= f.submit '変更', class: "btn btn-success" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>