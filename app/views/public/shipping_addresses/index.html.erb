<div class="container">
  <div class="row">
    <h3 class="col-lg-3 col-md-4 col-sm-4 bg-light text-center">
      配送先登録/一覧
    </h3>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <%= form_with model: @shipping_address, url: "/shipping_addresses", method: :post do |f| %>
        <div class="form-group row">
          <label for="post_code" class="col-sm-3 col-form-label">郵便番号（ハイフンなし）</label>
          <div class="col-sm-3">
            <%= f.text_field :post_code, class: "form-control border-dark", placeholder: "0000000" %>
          </div>
        </div>

        <div class="form-group row">
          <label for="address" class="col-sm-3 col-form-label">住所</label>
          <div class="col-sm-6">
            <%= f.text_field :address, class: "form-control border-dark", placeholder: "東京都千代田区千代田1-1" %>
          </div>
        </div>

        <div class="form-group row">
          <label for="name" class="col-sm-3 col-form-label">宛名</label>
          <div class="col-sm-3">
            <%= f.text_field :name, class: "form-control border-dark", placeholder: "山田花子" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-9 form-group text-right">
            <%= f.submit '新規登録', class: "btn btn-success" %>
          </div>
        </div>
      <% end %>

      <div class="container">
        <div class="row">
          <table class="col-lg-9 col-md-10 col-sm-12 table table-bordered border-dark" >
            <thead class="thead-light">
              <tr>
                <th>郵便番号</th>
                <th>住所</th>
                <th>宛名</th>
                <th></th>
              </tr>
            </thead>

            <tbody>
              <% @shipping_addresses.each do |address| %>
              <tr>
                <td class="col-1"><%= address.post_code.to_s.insert(3, "-") %></td>
                <td class="col-lg-3 col-md-4 col-sm-5"><%= address.address %></td>
                <td class="col-1"><%= address.delivery_name %></td>
                <td class="col-lg-2 col-md-3 col-sm-4">
                  <div class="d-grid gap-2 d-md-block text-center">
                    <%= link_to "編集する", edit_shipping_address_path(address), class: "btn btn-sm btn-success" %>
                    <%= link_to "削除する", shipping_address_path(address), method: :delete, class: "btn btn-sm btn-danger" %>
                  </div>
                </td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
