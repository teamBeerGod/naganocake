<h3>配送先登録</h3>

<div class="new_shipping_address">
  <%= form_with model: @shipping_address, url: "/shipping_addresses", method: :post do |f| %>
    <table>
      <tr>
        <th>郵便番号(ハイフンなし)</th>
        <th><%= f.text_field :post_code, class: "form-controll", size: 15 %></th>
      </tr>
      <tr>
        <th>住所</th>
        <th><%= f.text_field :address, class: "form-controll", size: 40 %></th>
      </tr>
      <tr>
        <th><%= f.label :宛名 %></th>
        <th><%= f.text_field :delivery_name, class: "form-controll", size: 15  %></th>
      </tr>
    </table>
    <%= f.submit "新規登録" %>
  <% end %>
</div>

<div>
  <table class="table">
    <tr>
      <td>郵便番号</td>
      <td>住所</td>
      <td>宛名</td>
      <td></td>
    </tr>
    <% @shipping_addresses.each do |address| %>
      <tr>
        <td><%= address.post_code.to_s.insert(3, "-") %></td>
        <td><%= address.address %></td>
        <td><%= address.delivery_name %></td>
        <td>
          <%= link_to edit_shipping_address_path(address) do %>
            <i class="fas fa-edit"></i>
          <% end %>
        </td>
        <td>
          <%= link_to shipping_address_path(address), method: :delete do %>
            <i class="fas fa-trash"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>
</div>