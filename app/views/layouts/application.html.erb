<!DOCTYPE html>
<html>
  <head>
    <title>Naganocake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Slackside+One&display=swap" rel="stylesheet">

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>



  <body class="d-flex flex-column vh-100">
    <header class="p-0.5 mb-2 bg-dark text-white">
      <nav class="navbar navbar-expand-lg navbar-light">
        <h1>
          <%= link_to root_path,class:"logo" do %>
            <%= 'nagano cake' %>
          <% end %>
        </h1>
        <div class="container">
          <div  class="user-name text-white center-block">
              <% if customer_signed_in? %>
                ようこそ、<%= current_customer.last_name %>さん！
              <% end %>
          </div>

          <div>
            <ul class="navbar-nav ml-auto">
              <% if customer_signed_in? %>
                  <li class="nav-item">
                    <%= link_to "マイページ",customer_path(current_customer), class: 'nav-link text-light' %>
                  </li>
                  <li class="nav-item">
                    <%=  link_to "商品一覧", products_path, class: 'nav-link text-light' %>
                  </li>
                  <li class="nav-item">
                <%=  link_to "カート", cart_items_path, class: 'nav-link text-light' %>
                  </li>
                  <li class="nav-item">
                   <%= link_to "ログアウト", destroy_customer_session_path, method: :delete,class: 'nav-link text-light' %>
                  </li>
              <% elsif admin_signed_in? %>
                  <li class="nav-item">
                    <%=  link_to "商品一覧", admin_products_path, class: 'nav-link text-light' %>
                  </li>
                  <li class="nav-item">
                    <%= link_to "会員一覧",admin_customers_path,class: 'nav-link text-light' %>
                  </li>
                  <li class="nav-item">
                    <%=  link_to "注文履歴一覧", admin_root_path, class: 'nav-link text-light' %>
                  </li>
                  <li class="nav-item">
                    <%=  link_to "ジャンル一覧", admin_genres_path, class: 'nav-link text-light' %>
                  </li>
                  <li class="nav-item">
                    <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: 'nav-link text-light' %>
                  </li>
              <% else %>
                  <li class="nav-item">
                    <%= link_to "About", about_path,class: 'nav-link text-light' %>
                  </li>
                  <li class="nav-item">
                     <%=  link_to "商品一覧", products_path, class: 'nav-link text-light' %>
                  </li>
                  <li class="nav-item">
                    <%= link_to "新規登録", new_customer_registration_path,class: 'nav-link text-light' %>
                  </li>
                  <li class="nav-item">
                    <%= link_to "ログイン", new_customer_session_path ,class: 'nav-link text-light' %>
                  </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <div>
      <main class="mb-auto">
        <%= yield %>
      </main>
    </div>
  </body>
</html>
